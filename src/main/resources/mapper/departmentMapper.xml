<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 부서 sql -->
<mapper namespace="com.bulemine.www.interfaces/departmentMapper">
<!-- 부서추가 -->
<insert id="" parameterType="cpDepartment">
INSERT INTO CP_DEPARTMENT
(
	depNum
	,depNameEn
	,depNameKr
	,typeAlias
)VALUES(
	DP_SEQ.nextval()
    ,#{depNameEn}
    ,#{depNameKr}
    ,#{typeAlias}
);
</insert>
  
  
<!-- 부서 조회 -->
<select id="" resultType="cpDepartment">
SELECT 
	depNum
	,depNameEn
	,depNameKr
	,typeAlias
FROM CP_DEPARTMENT
</select> 
<!-- 부서 삭제 -->
<delete id="" >
DELETE
FROM CP_DEPARTMENT
WHERE
	depNum=#{depNum}
</delete>	

</mapper>